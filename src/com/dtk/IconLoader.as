/******************************************************************************   IconLoader.as    Charles S.Davis    May 2009	**   Loads single small image with no loading indicator, tween or frame******************************************************************************/package com.dtk{		import flash.display.Sprite;	import flash.display.DisplayObject;	import flash.display.Loader;	import flash.net.URLRequest;		public class IconLoader extends Sprite 	{		public var pathToImage:String;		public var imageWidth:uint;		public var imageHeight:uint;				private var ldr:Loader;		private var urlRequest:URLRequest;		/**		 *	 @param			pathToImage                 String			path to image		 *   @param			imageWidth, imageHeight    	Number			image dimensions		 *   @param			image_path				    String			path to image		 *		 *   USAGE:   		var newVar:IconLoader = new IconLoader( pathToImage, imageWidth, imageHeight );		 *					newVar.x = x;		 *					newVar.y = y;		 *            		addChild( newVar );		 */		public function IconLoader( pathToImage:String, imageWidth:uint, imageHeight:uint ):void 		{			this.pathToImage = pathToImage;			this.imageWidth  = imageWidth;			this.imageHeight = imageHeight;					createLoader();		}				/**		 *   create laoder object & load image		 */		private function createLoader():void 		{			// create new loader object			var ldr:Loader = new Loader;			ldr.load( new URLRequest( pathToImage ));			ldr.x = 0;			ldr.y = 0;			addChild( ldr );		}	}}