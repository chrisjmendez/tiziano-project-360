/** -----------------------------------------------------------* Image* -----------------------------------------------------------* Description: Each Image Object stores the Image Source, a caption, and a reference* - ---------------------------------------------------------* Created by: chrisaiv@gmail.com* Modified by: * Date Modified: September 10, 2008* - ---------------------------------------------------------* Copyright ©2008 * - ---------------------------------------------------------***/package com.chrisaiv.flickr{	public class Image	{		private var _index:Number;		private var _id:String;		private var _caption:String;		private var _uri:String;		private var _src:String;				public function Image( idx:uint, id:String = null, caption:String = null, src:String = null, uri:String = null )		{			_index   = idx;			_caption = caption;			_uri     = uri;			_src     = src;			_id		 = id;		}				//Used for placement on the containerMc		public function get index():uint		{			return _index;		}						//Used for FlickrImageLoader		public function get id():String		{			return _id;		}		public function get caption():String		{			return _caption;		}						public function get uri():String		{			return _uri;		}		public function set uri( u:String ):void		{			_uri = u;		}				public function get src():String		{			return _src;		}		public function set src( s:String ):void		{			_src = s;		}	}}