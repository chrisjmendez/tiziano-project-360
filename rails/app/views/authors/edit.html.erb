<h1>Editing author</h1>

<% form_for(@author) do |f| %>
  <%= f.error_messages %>

  <p>
	<%= f.label :first_name -%>
	<%= f.text_field :first_name, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>
  <p>
  	<%= f.label :last_name -%>
	<%= f.text_field :last_name, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>
  
  <p>
	<%=  select("post", "category", Author::TYPES, {:prompt => 'Select Author Type'}) %>
  </p>
  
  <p>
  	<%= f.label :city -%>
	<%= f.text_field :city, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>

  <p>
	<%=  select("post", "STATE", Author::STATE_ABBR, {:prompt => 'Select State'}) %>
  </p>

  <p>
  	<%= f.label :country -%>
	<%= f.text_field :country, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>

  <p>
  	<%= f.label :region -%>
	<%= f.text_field :region, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>

  <p>
  	<%= f.label :school -%>
	<%= f.text_field :school, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>

  <p>
  	<%= f.label :grade -%>
	<%= f.text_field :grade, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>

  <p>
  	<%= f.label :major -%>
	<%= f.text_field :major, 
					:size => Author::SIZE, 
					:maxlength => Author::MAX_LENGTH %>
  </p>

  <p>
  	<%= f.label :image_url -%>
	<%= f.text_field :image_url, 
					:size => Author::SIZE %>
  </p>

  <p>
  	<%= f.label :summary -%>
	<%= f.text_area :summary %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @author %> |
<%= link_to 'Back', authors_path %>